{
  "manifest_version": 2,
  "name": "Job Tracker",
  "version": "1.0",
  "description": "Save job postings to Notion database",
  "permissions": [
    "activeTab",
    "storage",
    "https://api.notion.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "icons": {
    "48": "icon.png"
  }
}
